section#profile.section__container(data-section="profile")
	.profile
		.header
			span._icon-arrow-left(data-back="profile" data-open="chats")
			.header-text
				avatar(style="background-image:url(./img/avatars/avatar-1.png)")
				name MY E-CARD
			span._icon-options(data-button="profile-options")
		.content
			.qr-wrapper
				h4 QR FOR CHAT
				div(data-role="visitor", data-visitor="", data-exhibitor="", id="qrcode")
					span invite as visitor
					img(src="img/profile/qr-code.png?_v=20230308150414", alt="QR")
					#qrcode(style="display:none")
			include components/_molecule
			.cards-wrapper.scroll-x 
				.card-wrapper
					img(src="img/profile/card-1.jpg?_v=20230308150414" alt="vcard")
					span._icon-bin
				.card-default
					img(src="img/profile/id-card.png?_v=20230308150414" alt="vcard")
					h4 Add photo of business card
					input#upload-card(type="file" name="")
		#profile-options.profile-options
			.header
				span._icon-arrow-left(data-option="profile-options")
			.body
				h2 Your Profile
				ul
					li(data-button="login")
						i._icon-login
						.name
							h4 Log In
					li
						i._icon-export
						.name
							h4 Log output 
		#login.profile-options 
			.header
				span._icon-arrow-left(data-option="login")
			.body
				h2 Log In
				.login-wrapper
					h3 Log In with
					ul
						li
							a(href="auth/facebook")
								img(src="https://cdn.meyou.id/landing/fb-black.svg?_v=20230308150414" alt="")
								span Facebook
						li
							a(href="auth/google")
								img(src="https://cdn.meyou.id/landing/google-black.svg?_v=20230308150414" alt="")
								span Google
						li
							a(href="auth/linkedin")
								img(src="https://cdn.meyou.id/landing/linkedin-black.svg?_v=20230308150414" alt="")
								span LinkedIn
					.login-line
						span or with
					ul.extra-login
						li
							a(href="auth/apple")
								img(src="https://cdn.meyou.id/landing/apple-white.svg?_v=20230308150414" alt="")
						li
							a(href="auth/vk")
								img(src="https://cdn.meyou.id/landing/vk-white.svg?_v=20230308150414" alt="")
						li
							a(href="auth/yandex")
								img(src="https://cdn.meyou.id/landing/yandex-white.svg?_v=20230308150414" alt="")
					p.policy 
						| We do not publish anything on social networks, we do not collect phone numbers or emails. By logging in, you agree to
					a.terms(href="/terms") terms of service and security policy
